<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="BlueTwilight_Main">
    <control type="group">
      <visible>!$EXP[infodialog_active]</visible>
      <include>Animation_TopSlide_Home</include>
      <control type="group">
        <control type="image">
          <left>0</left>
          <top>0</top>
          <height>95</height>
          <width>1920</width>
          <texture colordiffuse="dialog_bg_30">common/white.png</texture>
        </control>
        <control type="list" id="9000">
          <width>1920</width>
          <centerleft>50%</centerleft>
          <height>100</height>
          <top>3</top>
          <onup>9001</onup>
          <ondown>2999</ondown>
          <orientation>horizontal</orientation>
          <animation effect="slide" time="200" start="0" end="0,-100" reversible="true" condition="Control.HasFocus(9001)">Conditional</animation>
          <focusedlayout height="95" width="240">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>240</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>ffffffff</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="image">
                <left>0</left>
                <top>0</top>
                <height>5</height>
                <width>240</width>
                <texture colordiffuse="ffffffff">common/white.png</texture>
                <visible>Control.HasFocus(9000)</visible>
              </control>
            </control>
          </focusedlayout>
          <itemlayout height="95" width="240">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>240</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>B3ededed</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
            </control>
          </itemlayout>
          <content>
            <include>skinshortcuts-mainmenu</include>
          </content>
        </control>
        <control type="list" id="9001">
          <width>1920</width>
          <centerleft>50%</centerleft>
          <height>100</height>
          <top>3</top>
          <ondown>9000</ondown>
          <orientation>horizontal</orientation>
          <animation effect="slide" time="200" start="0" end="0,-100" reversible="true" condition="!Control.HasFocus(9001)">Conditional</animation>
          <focusedlayout height="95" width="240">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>240</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>ffffffff</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="image">
                <left>0</left>
                <top>0</top>
                <height>5</height>
                <width>240</width>
                <texture colordiffuse="ffffffff">common/white.png</texture>
                <visible>Control.HasFocus(9000)</visible>
              </control>
            </control>
          </focusedlayout>
          <itemlayout height="95" width="240">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>240</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>B3ededed</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
            </control>
          </itemlayout>
          <content>
            <include>skinshortcuts-submenu</include>
          </content>
        </control>
        <animation effect="slide" time="200" start="0" end="0,-400" reversible="true" condition="[ControlGroup(3000).HasFocus | $EXP[FirstExpose] | $EXP[SecondExpose] | String.IsEqual(Window(home).Property(activateSpotlight),true)] + !String.StartsWith(ListItem.FolderPath,favourites://)">Conditional</animation>
      </control>
      <control type="group">
        <control type="grouplist" id="2999">
          <onup>9000</onup>
          <ondown>3000</ondown>
          <top>112</top>
          <left>-700</left>
          <height>220</height>
          <include>skinshortcuts-template-localWidget</include>
          <animation effect="slide" time="200" start="0" end="0,-400" reversible="true" condition="[ControlGroup(3000).HasFocus | $EXP[FirstExpose] | $EXP[SecondExpose] | String.IsEqual(Window(home).Property(activateSpotlight),true)] + !String.StartsWith(ListItem.FolderPath,favourites://)">Conditional</animation>
        </control>
        <control type="grouplist" id="3000">
          <centerleft>50%</centerleft>
          <top>360</top>
          <width>3220</width>
          <height>999999</height>
          <onup>2999</onup>
          <include content="itemgap" condition="Skin.HasSetting(ShowWidgetLabels)"/>
          <include>skinshortcuts-template-widgetsWall</include>
          <animation effect="slide" time="0" start="0" end="-100,0" reversible="false" condition="true">Conditional</animation>
          <animation effect="slide" time="0" start="0" end="0,195" reversible="false" condition="!ControlGroup(3000).HasFocus + Integer.IsGreater(Container(3000).Position,0)">Conditional</animation>
          <animation effect="slide" time="200" start="0" end="0,500" reversible="true" condition="[ControlGroup(3000).HasFocus | $EXP[FirstExpose] | $EXP[SecondExpose]] + !Skin.HasSetting(ShowWidgetLabels) + !String.StartsWith(ListItem.FolderPath,favourites://)">Conditional</animation>
          <animation effect="slide" time="200" start="0" end="0,400" reversible="true" condition="[[ControlGroup(3000).HasFocus | $EXP[FirstExpose] | $EXP[SecondExpose]] + Skin.HasSetting(ShowWidgetLabels)] + !String.StartsWith(ListItem.FolderPath,favourites://)">Conditional</animation>
          <animation effect="slide" time="200" start="0" end="0,340" reversible="true" condition="$EXP[FirstExpose] | $EXP[SecondExpose]">Conditional</animation>
          <animation effect="slide" time="200" start="0" end="0,780" reversible="true" condition="String.IsEqual(Window(home).Property(activateSpotlight),true)">Conditional</animation>
        </control>
      </control>
      <control type="group">
        <include content="showcasemargin" condition="Skin.HasSetting(ShowWidgetLabels)"/>
        <include content="Object_Item_Showcase">
          <param name="title" value="$VAR[Label_Title]"/>
          <param name="title_width" value="1000" />
          <param name="clearlogo_top_margin" value="200"/>
          <param name="plot" value="$VAR[Label_PlotTextBoxVar]"/>
          <param name="visible" value="ControlGroup(3000).HasFocus + !Container(7501).IsUpdating"/>
        </include>
        <animation effect="fade" time="200" start="0" end="100" condition="ControlGroup(3000).HasFocus + !ControlGroup(2999).HasFocus">Conditional</animation>
        <animation effect="fade" time="200" end="0" start="100" condition="$EXP[FirstExpose] | $EXP[SecondExpose]">Conditional</animation>
      </control>
    </control>
    <!-- Expose -->
    <control type="group">
      <visible>!$EXP[infodialog_active]</visible>
      <animation effect="fade" start="100" end="0" time="400" tween="linear" condition="$EXP[CustomWindowVisible]">Conditional</animation>
      <control type="image">
        <top>0</top>
        <left>-150</left>
        <width>1920</width>
        <height>1080</height>
        <texture background="true">common/flixspotlight-shadowspot.png</texture>
        <visible>Player.HasVideo + $EXP[FirstExpose]</visible>
        <animation effect="fade" start="0" end="100" time="1200" tween="linear" condition="Player.HasVideo">Conditional</animation>
      </control>
      <control type="group">
        <include content="showcasemargin" condition="Skin.HasSetting(ShowWidgetLabels)"/>
        <include content="Object_Item_Showcase">
          <param name="title" value="$INFO[Window(home).Property(spotlight_Title)]"/>
          <param name="title_width" value="1000" />
          <param name="clearlogo_top_margin" value="200"/>
          <param name="plot" value="$INFO[Window(home).Property(spotlight_Plot)]"/>
          <param name="visible" value="$EXP[FirstExpose] + !Container(7501).IsUpdating"/>
        </include>
        <animation effect="fade" time="200" end="0" start="100" condition="$EXP[SecondExpose]">Conditional</animation>
      </control>
    </control>
  </include>
</includes>
