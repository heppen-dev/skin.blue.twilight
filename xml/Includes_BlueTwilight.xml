          <itemlayout height="95" width="100">
            <control type="image">
                <left>0</left>
                <top>13</top>
                <height>64</height>
                <width>64</width>
                <texture colordiffuse="dialog_fg_30">$INFO[ListItem.Icon]</texture>
                <visible>Control.HasFocus(9001)</visible>
              </control>
          </itemlayout>
          <content>
            <include>skinshortcuts-submenu</include>
          </content>
