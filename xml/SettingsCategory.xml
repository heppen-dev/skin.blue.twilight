<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">300</defaultcontrol>
  <backgroundcolor>Background</backgroundcolor>
  <include>Defs_Settings_OnLoad</include>
  <controls>
    <include>DefaultBackground</include>
    <control type="group">
      <width>1720</width>
      <height>840</height>
      <left>100</left>
      <top>140</top>
      <control type="image">
        <width>1720</width>
        <height>840</height>
        <left>0</left>
        <top>0</top>
        <texture colordiffuse="dialog_bg_100" border="5">common/box.png</texture>
        <bordertexture border="28">common/shadow-dialog-24.png</bordertexture>
        <bordersize>28</bordersize>
      </control>
      <control type="group">
        <include content="DefaultSettingButtonGradient">
          <param name="id" value="5"/>
          <param name="height" value="75"/>
          <top>80</top>
          <bottom>137</bottom>
          <width>1203</width>
          <height>75</height>
          <right>28</right>
          <visible>ControlGroup(5).HasFocus()</visible>
        </include>
        <control type="grouplist" id="5">
          <description>control area</description>
          <top>80</top>
          <left>485</left>
          <right>0</right>
          <width>1203</width>
          <height>600</height>
          <itemgap>0</itemgap>
          <onleft>3</onleft>
          <onright>60</onright>
          <pagecontrol>60</pagecontrol>
          <usecontrolcoords>true</usecontrolcoords>
        </control>
      </control>
      <control type="button" id="7">
        <description>Default Button</description>
        <include content="DefaultSettingButton">
          <param name="height" value="75" />
        </include>
      </control>
      <control type="radiobutton" id="8">
        <description>Default RadioButton</description>
        <include content="DefaultSettingButton">
          <param name="textwidth" value="640"/>
          <param name="height" value="75" />
        </include>
      </control>
      <control type="spincontrolex" id="9">
        <description>Default SpinControlex</description>
        <include content="DefaultSettingButton">
          <param name="textwidth" value="640"/>
          <param name="height" value="75" />
        </include>
        <aligny>center</aligny>
      </control>
      <control type="sliderex" id="13">
        <description>Default Slider</description>
        <include content="DefaultSettingButton">
          <param name="height" value="75" />
        </include>
        <aligny>center</aligny>
      </control>
      <control type="label" id="14">
        <description>Default Label</description>
        <textoffsetx>90</textoffsetx>
        <top>0</top>
        <height>75</height>
        <label/>
        <align>left</align>
        <aligny>center</aligny>
        <font>font12</font>
        <textcolor>dialog_fg_70</textcolor>
      </control>
      <control type="group">
        <depth>DepthContentPanel</depth>
        <left>103</left>
        <include content="DefaultSettingButtonGradient">
          <param name="id" value="3"/>
          <param name="height" value="75"/>
          <top>80</top>
          <height>75</height>
          <width>385</width>
          <left>1</left>
          <visible>!Control.HasFocus(20)</visible>
        </include>
        <control type="grouplist" id="3">
          <description>button area</description>
          <left>0</left>
          <top>80</top>
          <width>385</width>
          <height>600</height>
          <usecontrolcoords>true</usecontrolcoords>
          <onright>5</onright>
          <onup>3</onup>
          <ondown>20</ondown>
          <include>Defs_Settings_OnLeft</include>
        </control>
        <control type="button" id="10">
          <description>Default Category Button</description>
          <left>0</left>
          <height>75</height>
          <width>385</width>
          <textoffsetx>40</textoffsetx>
          <aligny>center</aligny>
          <texturefocus colordiffuse="00ffffff">lists/focus-rounded.png</texturefocus>
          <texturenofocus/>
        </control>
      </control>
      <control type="group">
        <depth>DepthContentPanel</depth>
        <top>680</top>
        <left>103</left>
        <include content="DefaultSettingButtonGradient">
          <param name="id" value="8800"/>
          <top>0</top>
          <height>75</height>
          <width>385</width>
          <visible>Control.HasFocus(20)</visible>
        </include>
        <control type="grouplist" id="8800">
          <onleft>300</onleft>
          <onright>5</onright>
          <onup>3</onup>
          <ondown>3</ondown>
          <control type="radiobutton" id="20">
            <width>385</width>
            <height>75</height>
            <aligny>center</aligny>
            <onclick>SettingsLevelChange</onclick>
            <textoffsetx>85</textoffsetx>
            <textoffsety>0</textoffsety>
            <texturefocus />
            <texturenofocus/>
            <radioposx>32</radioposx>
            <radioposy>0</radioposy>
            <radiowidth>32</radiowidth>
            <radioheight>32</radioheight>
            <textureradioonfocus colordiffuse="B3ededed">icons/settings.png</textureradioonfocus>
            <textureradioonnofocus colordiffuse="dialog_fg_70">icons/settings.png</textureradioonnofocus>
            <textureradioofffocus colordiffuse="B3ededed">icons/settings.png</textureradioofffocus>
            <textureradiooffnofocus colordiffuse="dialog_fg_70">icons/settings.png</textureradiooffnofocus>
          </control>
        </control>
      </control>
      <control type="group">
        <right>35</right>
        <top>133</top>
        <bottom>137</bottom>
        <width>60</width>
        <control type="scrollbar" id="60">
          <right>0</right>
          <top>0</top>
          <bottom>0</bottom>
          <width>8</width>
          <orientation>vertical</orientation>
          <texturesliderbackground/>
          <animation effect="slide" end="6,0" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(60)">conditional</animation>
          <onleft>5</onleft>
          <onright>5</onright>
          <animation effect="fade" start="0" end="100" time="200" delay="300">Visible</animation>
          <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
          <animation effect="fade" start="0" end="100" delay="300" time="320">WindowOpen</animation>
          <animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
          <hitrect x="0" y="0" w="60" h="100%"/>
        </control>
      </control>
      <control type="group">
        <control type="image">
          <description>Dialog Header image</description>
          <left>488</left>
          <top>80</top>
          <width>1</width>
          <height>675</height>
          <texture colordiffuse="main_fg_30">common/white.png</texture>
        </control>
      </control>
      <control type="group">
        <control type="image">
          <description>Dialog Header image</description>
          <left>103</left>
          <top>80</top>
          <width>1</width>
          <height>675</height>
          <texture colordiffuse="main_fg_30">common/white.png</texture>
        </control>
      </control>
      <include content="Defs_Settings_Changer">
        <onright>3</onright>
      </include>
    </control>
    <include content="TopBar">
      <param name="breadcrumbs_label" value="$INFO[Control.GetLabel(2)]"/>
    </include>
    <!-- <include>BottomBar</include> -->
    <control type="group">
      <control type="textbox" id="6">
        <description>description area</description>
        <top>865</top>
        <left>625</left>
        <width>1155</width>
        <height>75</height>
        <font>font_tiny_hintlabel</font>
        <align>left</align>
        <aligny>center</aligny>
        <textcolor>$VAR[ColorHighlight]</textcolor>
        <autoscroll time="3000" delay="5000" repeat="5000">true</autoscroll>
      </control>
    </control>
    <control type="label" id="2">
      <description>breadcrumbs label</description>
      <visible>False</visible>
    </control>
  </controls>
</window>
