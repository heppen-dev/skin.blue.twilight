<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol>3</defaultcontrol>
  <backgroundcolor>Background</backgroundcolor>
  <controls>
    <include>DefaultBackground</include>
    <control type="multiimage">
      <depth>DepthBackground</depth>
      <include>FullScreenDimensions</include>
      <aspectratio>scale</aspectratio>
      <animation effect="zoom" center="auto" end="102,102" time="0" condition="Integer.IsGreater(System.StereoscopicMode,0)">conditional</animation>
      <animation effect="fade" start="0" end="100" time="400" reversible="true" condition="!Window.Previous(Settings)">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="300" reversible="true" condition="!Window.Next(Settings)">WindowClose</animation>
      <animation effect="fade" time="400">VisibleChange</animation>
      <imagepath colordiffuse="35FFFFFF">$INFO[Skin.String(HomeFanart.path)]settings$INFO[Skin.String(HomeFanart.ext)]</imagepath>
      <visible>!Player.HasMedia + !String.IsEmpty(Skin.String(HomeFanart.path))</visible>
    </control>
    <control type="group">
      <width>1400</width>
      <height>833</height>
      <left>260</left>
      <top>100</top>
      <include>OpenClose_Bottom</include>
      <control type="image">
        <texture colordiffuse="dialog_bg_100" border="21">common/box.png</texture>
        <bordertexture border="24">common/shadow-dialog-24.png</bordertexture>
        <width>1500</width>
        <height>935</height>
        <top>-20</top>
        <left>-50</left>
      </control>
      <control type="label">
        <top>30</top>
        <left>10</left>
        <label>$INFO[Control.GetLabel(2)]</label>
        <include>BreadcrumbsLabel</include>
      </control>
      <control type="group">
        <!-- <include>OpenClose_Bottom</include> -->
        <include content="DefaultSettingButtonGradient">
          <param name="id" value="5"/>
          <param name="height" value="85"/>
          <top>130</top>
          <bottom>137</bottom>
          <height>85</height>
          <left>445</left>
          <visible>ControlGroup(5).HasFocus()</visible>
        </include>
        <control type="grouplist" id="5">
          <description>control area</description>
          <top>130</top>
          <left>445</left>
          <right>0</right>
          <height>680</height>
          <itemgap>0</itemgap>
          <onleft>3</onleft>
          <onright>60</onright>
          <pagecontrol>60</pagecontrol>
          <usecontrolcoords>true</usecontrolcoords>
        </control>
      </control>
      <control type="button" id="7">
        <description>Default Button</description>
        <include content="DefaultSettingButton">
          <param name="height" value="85" />
        </include>
      </control>
      <control type="radiobutton" id="8">
        <description>Default RadioButton</description>
        <include content="DefaultSettingButton">
          <param name="textwidth" value="640"/>
          <param name="height" value="85" />
        </include>
      </control>
      <control type="spincontrolex" id="9">
        <description>Default SpinControlex</description>
        <include content="DefaultSettingButton">
          <param name="textwidth" value="640"/>
          <param name="height" value="85" />
        </include>
        <aligny>center</aligny>
      </control>
      <control type="sliderex" id="13">
        <description>Default Slider</description>
        <include content="DefaultSettingButton">
          <param name="height" value="85" />
        </include>
        <aligny>center</aligny>
      </control>
      <control type="label" id="14">
        <description>Default Label</description>
        <textoffsetx>90</textoffsetx>
        <top>0</top>
        <height>85</height>
        <label/>
        <align>left</align>
        <aligny>center</aligny>
        <font>font12</font>
        <textcolor>dialog_fg_70</textcolor>
      </control>
      <control type="group">
        <depth>DepthContentPanel</depth>
        <!-- <include>OpenClose_Left</include> -->
        <left>-50</left>
        <include content="DefaultSettingButtonGradient">
          <param name="id" value="3"/>
          <param name="height" value="85"/>
          <top>130</top>
          <height>85</height>
          <width>495</width>
          <visible>!Control.HasFocus(20)</visible>
        </include>
        <control type="grouplist" id="3">
          <description>button area</description>
          <left>0</left>
          <top>130</top>
          <width>495</width>
          <height>595</height>
          <usecontrolcoords>true</usecontrolcoords>
          <onleft>5</onleft>
          <onright>5</onright>
          <onup>3</onup>
          <ondown>20</ondown>
        </control>
        <control type="button" id="10">
          <description>Default Category Button</description>
          <left>0</left>
          <height>85</height>
          <width>495</width>
          <textoffsetx>40</textoffsetx>
          <aligny>center</aligny>
          <font>font27</font>
          <texturefocus colordiffuse="00ffffff">lists/focus-rounded.png</texturefocus>
          <texturenofocus/>
        </control>
      </control>
      <control type="group">
        <depth>DepthContentPanel</depth>
        <!-- <include>OpenClose_Left</include> -->
        <top>770</top>
        <left>-50</left>
        <include content="DefaultSettingButtonGradient">
          <param name="id" value="8800"/>
          <param name="height" value="85"/>
          <top>0</top>
          <height>85</height>
          <width>495</width>
          <visible>Control.HasFocus(20)</visible>
        </include>
        <control type="grouplist" id="8800">
          <onleft>5</onleft>
          <onright>5</onright>
          <onup>3</onup>
          <ondown>3</ondown>
          <control type="radiobutton" id="20">
            <width>495</width>
            <height>85</height>
            <aligny>center</aligny>
            <onclick>SettingsLevelChange</onclick>
            <textoffsetx>100</textoffsetx>
            <textoffsety>0</textoffsety>
            <texturefocus />
            <texturenofocus/>
            <radioposx>40</radioposx>
            <radioposy>0</radioposy>
            <radiowidth>40</radiowidth>
            <radioheight>40</radioheight>
            <textureradioonfocus colordiffuse="B3ededed">icons/settings.png</textureradioonfocus>
            <textureradioonnofocus colordiffuse="dialog_fg_70">icons/settings.png</textureradioonnofocus>
            <textureradioofffocus colordiffuse="B3ededed">icons/settings.png</textureradioofffocus>
            <textureradiooffnofocus colordiffuse="dialog_fg_70">icons/settings.png</textureradiooffnofocus>
          </control>
        </control>
      </control>
      <control type="group">
        <right>-6</right>
        <top>133</top>
        <bottom>137</bottom>
        <width>60</width>
        <control type="scrollbar" id="60">
          <right>0</right>
          <top>0</top>
          <bottom>0</bottom>
          <width>12</width>
          <orientation>vertical</orientation>
          <texturesliderbackground/>
          <animation effect="slide" end="6,0" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(60)">conditional</animation>
          <onleft>5</onleft>
          <onright>5</onright>
          <animation effect="fade" start="0" end="100" time="200" delay="300">Visible</animation>
          <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
          <animation effect="fade" start="0" end="100" delay="300" time="320">WindowOpen</animation>
          <animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
          <hitrect x="0" y="0" w="60" h="100%"/>
        </control>
      </control>
      <control type="group">
        <control type="image">
          <description>Dialog Header image</description>
          <left>443</left>
          <top>130</top>
          <width>5</width>
          <height>785</height>
          <texture colordiffuse="$VAR[ColorHighlight]" border="3">common/separator-grey-vertical.png</texture>
        </control>
        <control type="image">
          <description>Dialog Header image</description>
          <left>442</left>
          <top>130</top>
          <width>5</width>
          <height>785</height>
          <texture colordiffuse="$VAR[ColorGradient]" border="3">common/white-gradient.png</texture>
        </control>
      </control>
    </control>
    <!-- <include content="TopBar">
      <param name="breadcrumbs_label" value="$LOCALIZE[5]$INFO[Control.GetLabel(2), / ]" />
    </include>
    <include>BottomBar</include> -->
    <control type="group">
      <include>OpenClose_Bottom</include>
      <control type="textbox" id="6">
        <description>description area</description>
        <top>935</top>
        <left>740</left>
        <width>860</width>
        <height>60</height>
        <font>font12</font>
        <align>justify</align>
        <textcolor>$VAR[ColorHighlight]</textcolor>
        <autoscroll time="3000" delay="5000" repeat="5000">true</autoscroll>
      </control>
    </control>
    <control type="label" id="2">
      <description>breadcrumbs label</description>
      <visible>False</visible>
    </control>
  </controls>
</window>
