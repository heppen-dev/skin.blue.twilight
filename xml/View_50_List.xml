  <include name="ListContainer">
    <param name="left">0</param>
    <param name="right">0</param>
    <definition>
      <control type="fixedlist" id="$PARAM[list_id]">
        <left>$PARAM[left]</left>
        <right>$PARAM[right]</right>
        <top>list_y_offset</top>
        <bottom>list_y_offset</bottom>
        <movement>3</movement>
        <focusposition>4</focusposition>
        <scrolltime tween="cubic" easing="out">500</scrolltime>
        <orientation>vertical</orientation>
        <pagecontrol>60</pagecontrol>
        <onright>9000</onright>
        <onleft>60</onleft>
        <onup>$PARAM[list_id]</onup>
        <ondown>$PARAM[list_id]</ondown>
        <viewtype label="$PARAM[viewtype_label]">list</viewtype>
        <include content="View_Forced">
          <param name="string" value="$PARAM[viewtype_label]"/>
        </include>
        <visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(games) | Window.IsActive(videoplaylist) | Window.IsActive(musicplaylist)</visible>
        <focusedlayout height="list_item_height">
          <control type="group">
            <left>0</left>
            <right>0</right>
            <top>0</top>
            <bottom>0</bottom>
            <control type="image">
              <texture colordiffuse="$VAR[ColorHighlight]" border="10">common/box.png</texture>
            </control>
            <control type="image">
              <texture colordiffuse="$VAR[ColorGradient]" border="10">common/box-gradient.png</texture>
            </control>
            <visible>Control.HasFocus($PARAM[list_id])</visible>
          </control>
          <control type="label">
            <left>130</left>
            <right>70</right>
            <top>0</top>
            <bottom>0</bottom>
            <aligny>center</aligny>
            <scroll>true</scroll>
            <font>font27</font>
            <textcolor>b3ededed</textcolor>
            <label>$INFO[ListItem.Year]</label>
            <shadowcolor>text_shadow</shadowcolor>
          </control>
          <control type="label">
            <left>240</left>
            <right>70</right>
            <top>0</top>
            <bottom>0</bottom>
            <aligny>center</aligny>
            <font>font27</font>
            <textcolor>b3ededed</textcolor>
            <label>$VAR[ListLabelVarExtended]</label>
            <shadowcolor>text_shadow</shadowcolor>
          </control>
          <control type="label">
            <top>0</top>
            <bottom>0</bottom>
            <left>100</left>
            <right>20</right>
            <align>right</align>
            <aligny>center</aligny>
            <font>font12</font>
            <textcolor>b3ededed</textcolor>
            <label>$VAR[ListLabel2Var]</label>
            <animation effect="fade" start="70" end="100" time="300" reversible="false">Focus</animation>
            <shadowcolor>text_shadow</shadowcolor>
          </control>
          <control type="image">
            <left>201</left>
            <centertop>50%</centertop>
            <width>32</width>
            <height>32</height>
            <textcolor>b3ededed</textcolor>
            <texture>$VAR[ListWatchedIconVar]</texture>
            <animation effect="fade" start="30" end="100" time="300" reversible="false">Focus</animation>
          </control>
          <control type="image">
            <left>201</left>
            <centertop>50%</centertop>
            <width>32</width>
            <height>32</height>
            <textcolor>b3ededed</textcolor>
            <texture colordiffuse="$VAR[ColorHighlight]">$VAR[ListWatchedIconVar]</texture>
            <animation effect="fade" start="0" end="100" time="300" reversible="false">Focus</animation>
            <animation effect="fade" time="150">VisibleChange</animation>
            <visible>!Control.HasFocus($PARAM[list_id])</visible>
          </control>
        </focusedlayout>
        <itemlayout height="list_item_height">
          <control type="label">
