<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="MoviesHub_Main">
    <control type="group">
      <visible>!$EXP[infodialog_active]</visible>
      <include>Animation_TopSlide_Home</include>
      <control type="group" id="5610">
        <height>120</height>
        <width>1920</width>
        <control type="image">
          <left>0</left>
          <top>0</top>
          <height>95</height>
          <texture colordiffuse="dialog_bg_30">common/white.png</texture>
        </control>
        <control type="image">
          <left>0</left>
          <top>93</top>
          <height>5</height>
          <texture colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
        </control>
        <control type="label">
          <top>115</top>
          <align>center</align>
          <font>font_tiny_hintlabel</font>
          <label>You are in Movies Hub</label>
        </control>
        <control type="list" id="9000">
          <top>3</top>
          <onup>9001</onup>
          <ondown>2999</ondown>
          <orientation>horizontal</orientation>
          <animation effect="slide" time="200" start="0" end="0,-100" reversible="true" condition="Control.HasFocus(9001)">Conditional</animation>
          <animation effect="slide" start="0,0" end="840,0" time="0" condition="Integer.IsEqual(Container(9000).NumItems,1)">conditional</animation>
          <animation effect="slide" start="0,0" end="720,0" time="0" condition="Integer.IsEqual(Container(9000).NumItems,2)">conditional</animation>
          <animation effect="slide" start="0,0" end="600,0" time="0" condition="Integer.IsEqual(Container(9000).NumItems,3)">conditional</animation>
          <animation effect="slide" start="0,0" end="480,0" time="0" condition="Integer.IsEqual(Container(9000).NumItems,4)">conditional</animation>
          <animation effect="slide" start="0,0" end="360,0" time="0" condition="Integer.IsEqual(Container(9000).NumItems,5)">conditional</animation>
          <animation effect="slide" start="0,0" end="240,0" time="0" condition="Integer.IsEqual(Container(9000).NumItems,6)">conditional</animation>
          <animation effect="slide" start="0,0" end="120,0" time="0" condition="Integer.IsEqual(Container(9000).NumItems,7)">conditional</animation>
          <animation effect="slide" start="0,0" end="0" time="0" condition="Integer.IsGreater(Container(9000).NumItems,7)">conditional</animation>
          <focusedlayout height="95" width="240">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>ffffffff</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="image">
                <left>0</left>
                <top>90</top>
                <height>5</height>
                <width>240</width>
                <texture colordiffuse="ffffffff">common/white.png</texture>
                <visible>Control.HasFocus(9000)</visible>
              </control>
            </control>
          </focusedlayout>
          <itemlayout height="95" width="240">
            <control type="label">
              <left>0</left>
              <top>0</top>
              <height>95</height>
              <scroll>true</scroll>
              <aligny>center</aligny>
              <align>center</align>
              <font>font_menu</font>
              <textcolor>B3ededed</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
          </itemlayout>
          <content>
            <include>skinshortcuts-mainmenu</include>
          </content>
        </control>
        <control type="list" id="9001">
          <width>1920</width>
          <centerleft>50%</centerleft>
          <height>100</height>
          <top>3</top>
          <ondown>9000</ondown>
          <orientation>horizontal</orientation>
          <animation effect="slide" time="200" start="0" end="0,-100" reversible="true" condition="!Control.HasFocus(9001)">Conditional</animation>
          <focusedlayout height="95" width="240">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>240</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>ffffffff</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="image">
                <left>0</left>
                <top>0</top>
                <height>5</height>
                <width>240</width>
                <texture colordiffuse="ffffffff">common/white.png</texture>
                <visible>Control.HasFocus(9001)</visible>
              </control>
            </control>
          </focusedlayout>
          <itemlayout height="95" width="240">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>240</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>B3ededed</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
            </control>
          </itemlayout>
          <content>
            <include>skinshortcuts-submenu</include>
          </content>
        </control>
        <animation effect="slide" time="200" start="0" end="0,-400" reversible="true" condition="[ControlGroup(3000).HasFocus | $EXP[FirstExpose] | $EXP[SecondExpose] | String.IsEqual(Window(home).Property(activateSpotlight),true)] + !String.StartsWith(ListItem.FolderPath,favourites://)">Conditional</animation>
      </control>
      <control type="group">
        <control type="grouplist" id="2999">
          <onup>9000</onup>
          <ondown>3000</ondown>
          <top>250</top>
          <left>-700</left>
          <height>300</height>
          <include>skinshortcuts-template-localWidget</include>
          <animation effect="slide" time="200" start="0" end="0,-600" reversible="true" condition="[ControlGroup(3000).HasFocus | $EXP[FirstExpose] | $EXP[SecondExpose] | String.IsEqual(Window(home).Property(activateSpotlight),true)] + !String.StartsWith(ListItem.FolderPath,favourites://)">Conditional</animation>
        </control>
        <control type="grouplist" id="3000">
          <onup>2999</onup>
          <top>615</top>
          <height>450</height>
          <width>1920</width>
          <include condition="!Skin.HasSetting(ShowWidgetLabels)">widgetswolabels_gap</include>
          <usecontrolcoords>true</usecontrolcoords>
          <include>skinshortcuts-template-moviesHub</include>
          <animation effect="slide" time="200" start="0" end="0,640" reversible="true" condition="$EXP[FirstExpose] | $EXP[SecondExpose]">Conditional</animation>
        </control>
        <control type="grouplist" id="3000">
          <onup>2999</onup>
          <top>615</top>
          <height>450</height>
          <width>1920</width>
          <include condition="!Skin.HasSetting(ShowWidgetLabels)">widgetswolabels_gap</include>
          <usecontrolcoords>true</usecontrolcoords>
          <include>skinshortcuts-template-globalHub</include>
          <animation effect="slide" time="200" start="0" end="0,640" reversible="true" condition="$EXP[FirstExpose] | $EXP[SecondExpose]">Conditional</animation>
        </control>
      </control>
      <control type="group">
        <left>90</left>
        <include content="Object_Item_Showcase">
          <param name="title" value="$VAR[Label_Title]"/>
          <param name="title_width" value="1000" />
          <param name="clearlogo_top_margin" value="200"/>
          <param name="plot" value="$VAR[Label_PlotTextBoxVar]"/>
          <param name="visible" value="ControlGroup(3000).HasFocus + !String.StartsWith(ListItem.FolderPath,favourites://)"/>
        </include>
        <animation effect="fade" time="200" start="0" end="100" condition="ControlGroup(3000).HasFocus + !ControlGroup(2999).HasFocus">Conditional</animation>
        <animation effect="fade" time="200" end="0" start="100" condition="$EXP[FirstExpose] | $EXP[SecondExpose]">Conditional</animation>
      </control>
    </control>
  </include>
</includes>