<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="Primus_Main">
    <control type="group">
      <control type="group">
        <control type="list" id="9000">
          <height>100</height>
          <top>3</top>
          <left>92</left>
          <ondown>2999</ondown>
          <orientation>horizontal</orientation>
          <scrolltime tween="cubic" easing="out">500</scrolltime>
          <focusedlayout height="95" width="260">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>260</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>selected</textcolor>
                <label>$INFO[ListItem.Label]</label>
                <shadowcolor>text_shadow</shadowcolor>
              </control>
              <control type="image">
                <left>0</left>
                <top>0</top>
                <height>5</height>
                <width>260</width>
                <texture colordiffuse="">common/white.png</texture>
                <visible>Control.HasFocus(9000)</visible>
              </control>
            </control>
          </focusedlayout>
          <itemlayout height="95" width="260">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>260</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>dialog_fg_70</textcolor>
                <label>$INFO[ListItem.Label]</label>
                <shadowcolor>text_shadow</shadowcolor>
              </control>
            </control>
          </itemlayout>
          <content>
            <include>skinshortcuts-mainmenu</include>
          </content>
        </control>
        <animation effect="slide" time="200" start="0" end="0,-400" reversible="true" condition="ControlGroup(3000).HasFocus | Window.IsVisible(1146)">Conditional</animation>
      </control>
      <control type="group">
        <control type="grouplist" id="2999">
          <onup>9000</onup>
          <ondown>3000</ondown>
          <top>112</top>
          <left>-700</left>
          <height>220</height>
          <include>skinshortcuts-template-localWidget</include>
          <animation effect="slide" time="200" start="0" end="0,-400" reversible="true" condition="ControlGroup(3000).HasFocus | Window.IsVisible(1146)">Conditional</animation>
        </control>
        <control type="grouplist" id="3000">
          <centerleft>50%</centerleft>
          <onup>2999</onup>
          <top>330</top>
          <width>3220</width>
          <height>999999</height>
          <include>skinshortcuts-template-widgetsWall</include>
          <animation effect="slide" time="200" start="0" end="0,500" reversible="true" condition="ControlGroup(3000).HasFocus">Conditional</animation>
          <animation effect="slide" time="200" start="0" end="0,340" reversible="true" condition="Window.IsVisible(1140)">Conditional</animation>
          <animation effect="slide" time="200" start="0" end="0,780" reversible="true" condition="Window.IsVisible(1146)">Conditional</animation>
        </control>
      </control>
      <control type="group">
        <left>50</left>
        <include content="Object_Item_Showcase">
          <param name="title" value="$VAR[Label_Title]"/>
          <param name="title_width" value="1000" />
          <param name="plot" value="$VAR[Label_PlotTextBoxVar]"/>
          <param name="visible_condi" value="[!ControlGroup(2999).HasFocus + ControlGroup(3000).HasFocus] | [Window.IsVisible(1146) + ControlGroup(2999).HasFocus]"/>
        </include>
        <animation effect="fade" time="200" start="0" end="100" condition="ControlGroup(3000).HasFocus + !ControlGroup(2999).HasFocus">Conditional</animation>
        <animation effect="fade" time="200" end="0" start="100" condition="Window.IsVisible(1140) | Window.IsVisible(1141) | Window.IsVisible(1146)">Conditional</animation>
      </control>
    </control>
    <!-- spotlight -->
    <control type="group">
      <animation effect="fade" start="100" end="0" time="400" tween="quadratic" condition="Window.IsActive(1141)">Conditional</animation>
      <control type="image">
        <top>0</top>
        <left>-150</left>
        <width>1920</width>
        <height>1080</height>
        <texture background="true">common/flixspotlight-shadowspot.png</texture>
        <visible>Player.HasVideo + Window.IsVisible(1140)</visible>
        <animation effect="fade" start="0" end="100" time="1200" tween="quadratic" condition="Player.HasVideo">Conditional</animation>
      </control>
      <control type="group" id="5600">
        <visible>Window.IsVisible(1140) | Window.IsVisible(1146)</visible>
        <animation effect="slide" start="0,-1000" end="0" time="400" tween="quadratic" condition="Window.IsActive(1140) | Window.IsActive(1146)">Conditional</animation>
        <animation effect="fade" start="0" end="100" time="100" delay="100" condition="Window.IsActive(1140) | Window.IsActive(1146)">Conditional</animation>
        <control type="label">
          <top>280</top>
          <left>150</left>
          <bottom>60</bottom>
          <scroll>false</scroll>
          <width>1000</width>
          <textcolor>$VAR[TitleColour]</textcolor>
          <shadowcolor>black</shadowcolor>
          <label>$VAR[Label_Title]</label>
          <font>font_title</font>
          <visible>String.IsEmpty(Window(home).Property(spotlight_ClearLogo))</visible>
        </control>
        <control type="image">
          <top>-630</top>
          <left>150</left>
          <width>640</width>
          <aspectratio>keep</aspectratio>
          <texture background="true">$INFO[Window(home).Property(spotlight_ClearLogo)]</texture>
          <visible>!String.IsEmpty(Window(home).Property(spotlight_ClearLogo))</visible>
        </control>
        <control type="group">
          <top>360</top>
          <left>150</left>
          <include content="Object_Info_First_Line">
            <param name="visible_infoline" value="true" />
          </include>
        </control>
        <control type="group">
          <control type="textbox">
            <top>420</top>
            <left>150</left>
            <width>940</width>
            <height>120</height>
            <textcolor>white</textcolor>
            <label>$VAR[Label_PlotTextBoxVar]</label>
            <font>font_plot_normal</font>
            <shadowcolor>black</shadowcolor>
            <autoscroll delay="4000" time="4500" repeat="7000">Skin.HasSetting(autoscroll)</autoscroll>
          </control>
        </control>
        <visible>!$EXP[infodialog_active]</visible>
      </control>
    </control>
  </include>
</includes>
