<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="Primus_Main">
    <control type="group">
      <control type="group">
        <include content="Object_Item_Showcase">
          <param name="title" value="$VAR[Label_Title]"/>
          <param name="title_width" value="1000" />
          <param name="plot" value="$VAR[Label_PlotTextBoxVar]"/>
          <param name="visible_condi" value="!ControlGroup(2999).HasFocus"/>
        </include>
        <animation effect="fade" time="200" start="0" end="100" condition="ControlGroup(3000).HasFocus + !ControlGroup(2999).HasFocus">Conditional</animation>
        <animation effect="fade" time="200" end="0" start="100" condition="Window.IsVisible(1140)">Conditional</animation>
      </control>
      <control type="group">
        <control type="list" id="9000">
          <height>100</height>
          <top>3</top>
          <left>92</left>
          <ondown>2999</ondown>
          <orientation>horizontal</orientation>
          <scrolltime tween="cubic" easing="out">500</scrolltime>
          <focusedlayout height="95" width="260">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>260</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>selected</textcolor>
                <label>$INFO[ListItem.Label]</label>
                <shadowcolor>text_shadow</shadowcolor>
              </control>
              <visible>String.IsEqual(Skin.String(MenuStyle),IconsText) | String.IsEqual(Skin.String(MenuStyle),Text) | String.IsEmpty(Skin.String(MenuStyle))</visible>
            </control>
          </focusedlayout>
          <itemlayout height="95" width="260">
            <control type="group">
              <control type="label">
                <left>0</left>
                <top>0</top>
                <height>95</height>
                <width>260</width>
                <scroll>true</scroll>
                <aligny>center</aligny>
                <align>center</align>
                <font>font_menu</font>
                <textcolor>dialog_fg_70</textcolor>
                <label>$INFO[ListItem.Label]</label>
                <shadowcolor>text_shadow</shadowcolor>
              </control>
              <visible>String.IsEqual(Skin.String(MenuStyle),IconsText) | String.IsEqual(Skin.String(MenuStyle),Text) | String.IsEmpty(Skin.String(MenuStyle))</visible>
            </control>
          </itemlayout>
          <content>
            <include>skinshortcuts-mainmenu</include>
          </content>
        </control>
        <animation effect="slide" time="200" start="0" end="0,-400" reversible="true" condition="ControlGroup(3000).HasFocus">Conditional</animation>
      </control>
      <control type="group">
        <control type="grouplist" id="2999">
          <onup>9000</onup>
          <ondown>3000</ondown>
          <top>112</top>
          <left>368</left>
          <height>220</height>
          <include>skinshortcuts-template-localWidget</include>
          <animation effect="slide" time="200" start="0" end="0,-400" reversible="true" condition="ControlGroup(3000).HasFocus">Conditional</animation>
        </control>
        <control type="grouplist" id="3000">
          <onup>2999</onup>
          <top>330</top>
          <height>728</height>
          <include>skinshortcuts-template-widgetsWall</include>
          <animation effect="slide" time="200" start="0" end="0,400" reversible="true" condition="ControlGroup(3000).HasFocus">Conditional</animation>
          <animation effect="slide" time="200" start="0" end="0,240" reversible="true" condition="Window.IsVisible(1140)">Conditional</animation>
        </control>
      </control>
    </control>
  </include>
</includes>
